rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own documents
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      match /contacts/{contactId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Alerts: many rules depend on your auth model
    match /alerts/{alertId} {
      // Allow creating an alert if authenticated and userId matches
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow users to cancel their alerts within grace period
      allow update: if request.auth != null &&
        (resource.data.userId == request.auth.uid || request.auth.token.admin == true);
      allow read: if true; // public read for campus feed - consider limiting to campus users
    }

    // Devices storing FCM tokens - only app can write with auth
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}